        // Function to fetch news articles
        function fetchNews() {
            const url = `https://newsapi.org/v2/top-headlines?category=health&language=en&sortBy=popularity&apiKey=b314646dd6a6413fb6429d54e93f24d5`;

            $.ajax({
                url: url,
                method: 'GET',
                dataType: 'json',
                success: function (response) {
                    displayNews(response.articles.slice(0, 5)); // Display only the first 10 articles
                },
                error: function (error) {
                    console.log('Error fetching news:', error);
                }
            });
        }

        // Function to display news articles
        function displayNews(articles) {
            const newsContainer = $('#news');

            articles.forEach(article => {
                if (article.urlToImage == null) {

                } else {

                    const postItem = `

                                            <div class="post-item clearfix">
                                                <img src="${article.urlToImage}" alt="">
                                                <h4><a href="${article.url}">${article.title}</a></h4>
                                                <p>${article.description}</p>
                                            </div>
                                        `;
                    newsContainer.append(postItem);
                }
            });
        }

        // Fetch news when the page loads
        $(document).ready(fetchNews);
