                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div> *@

                }
            }

           
        </div>
    </section>

</main>



@section Scripts {
    <script>
        function addToCart(value) {
            $.ajax({
                url: "./AddtoCart",
                type: "POST",
                data: { "Identification": value },
                success: function (data) {
                    if (data === "1") {
                        Swal.fire({
                            position: "bottom-end",
                            icon: "success",
                            title: 'Added To Cart Successfully! 🥳',
                            showConfirmButton: false,
                            timer: 2500
                        })
                        window.location.reload();
                    } else if (data === "3") {
                        Swal.fire({
                            position: "bottom-end",
                            icon: "info",
                            title: 'Drug Already Exists in Cart!',
                            showConfirmButton: false,
                            timer: 2500
                        })
                    }
                    else {
                        Swal.fire({
                            position: "bottom-end",
                            icon: "error",
                            title: 'An error occurred!',
                            showConfirmButton: false,
                            timer: 2500
                        })
                    }
                }
            });
        }
    </script>
}
